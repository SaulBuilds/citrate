{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Citrate",
  "version": "1.0.0",
  "identifier": "ai.citrate.core",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://127.0.0.1:3456",
    "beforeBuildCommand": "npm run build:skip-ts",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Citrate - AI-Native Blockchain",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Finance",
    "shortDescription": "AI-Native Layer-1 Blockchain",
    "longDescription": "Citrate is an AI-native Layer-1 BlockDAG blockchain using GhostDAG consensus, paired with an EVM-compatible execution environment and Model Context Protocol (MCP) layer. Deploy, run, and monetize AI models on-chain.",
    "copyright": "Copyright 2025 Citrate AI",
    "publisher": "Citrate AI",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "minimumSystemVersion": "10.15",
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "wix": null,
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": ["libssl3", "libwebkit2gtk-4.1-0"]
      }
    }
  }
}
