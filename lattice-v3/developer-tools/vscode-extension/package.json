{
  "name": "lattice-ai-blockchain",
  "displayName": "Lattice AI Blockchain",
  "description": "VS Code extension for Lattice AI blockchain development",
  "version": "1.0.0",
  "publisher": "lattice-ai",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lattice/vscode-extension"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Debuggers",
    "Other"
  ],
  "keywords": [
    "blockchain",
    "ai",
    "lattice",
    "smart contracts",
    "solidity",
    "python",
    "ml"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:solidity",
    "onLanguage:javascript",
    "onCommand:lattice.connectNode",
    "workspaceContains:**/*.lattice",
    "workspaceContains:lattice.config.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lattice-model",
        "aliases": ["Lattice Model", "lattice"],
        "extensions": [".lattice"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lattice-model",
        "scopeName": "source.lattice",
        "path": "./syntaxes/lattice.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "lattice.connectNode",
        "title": "Connect to Lattice Node",
        "category": "Lattice"
      },
      {
        "command": "lattice.deployModel",
        "title": "Deploy Model",
        "category": "Lattice",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "lattice.runInference",
        "title": "Run Inference",
        "category": "Lattice",
        "icon": "$(play)"
      },
      {
        "command": "lattice.viewModels",
        "title": "View Models",
        "category": "Lattice",
        "icon": "$(list-unordered)"
      },
      {
        "command": "lattice.createProject",
        "title": "Create Lattice Project",
        "category": "Lattice",
        "icon": "$(file-directory)"
      },
      {
        "command": "lattice.runTests",
        "title": "Run Lattice Tests",
        "category": "Lattice",
        "icon": "$(beaker)"
      },
      {
        "command": "lattice.showExplorer",
        "title": "Show Lattice Explorer",
        "category": "Lattice"
      },
      {
        "command": "lattice.refreshModels",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .py",
          "command": "lattice.deployModel",
          "group": "lattice"
        },
        {
          "when": "resourceExtname == .py",
          "command": "lattice.runInference",
          "group": "lattice"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .py",
          "command": "lattice.deployModel",
          "group": "lattice"
        }
      ],
      "view/title": [
        {
          "command": "lattice.refreshModels",
          "when": "view == latticeModels",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "lattice": [
        {
          "id": "latticeConnection",
          "name": "Connection",
          "when": "lattice.connected || lattice.connecting"
        },
        {
          "id": "latticeModels",
          "name": "Models",
          "when": "lattice.connected"
        },
        {
          "id": "latticeNetwork",
          "name": "Network",
          "when": "lattice.connected"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lattice",
          "title": "Lattice",
          "icon": "$(symbol-misc)"
        }
      ]
    },
    "configuration": {
      "title": "Lattice",
      "properties": {
        "lattice.rpcUrl": {
          "type": "string",
          "default": "http://localhost:8545",
          "description": "Lattice node RPC URL"
        },
        "lattice.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically connect to Lattice node on startup"
        },
        "lattice.defaultGasLimit": {
          "type": "number",
          "default": 1000000,
          "description": "Default gas limit for transactions"
        },
        "lattice.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable CodeLens for Lattice functions"
        },
        "lattice.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show deployment and transaction notifications"
        }
      }
    },
    "snippets": [
      {
        "language": "python",
        "path": "./snippets/python.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/javascript.json"
      },
      {
        "language": "solidity",
        "path": "./snippets/solidity.json"
      }
    ],
    "debuggers": [
      {
        "type": "lattice",
        "label": "Lattice Debugger",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to the model file"
              },
              "rpcUrl": {
                "type": "string",
                "description": "Lattice node RPC URL",
                "default": "http://localhost:8545"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "lattice",
            "request": "launch",
            "name": "Deploy and Debug Model",
            "program": "${workspaceFolder}/model.py",
            "rpcUrl": "http://localhost:8545"
          }
        ]
      }
    ],
    "taskDefinitions": [
      {
        "type": "lattice",
        "required": ["task"],
        "properties": {
          "task": {
            "type": "string",
            "description": "Lattice task to run"
          },
          "file": {
            "type": "string",
            "description": "File to process"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.3.2",
    "web3": "^1.8.2"
  }
}