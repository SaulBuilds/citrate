{
  "$schema": "../gen/schemas/permission-schema.json",
  "identifier": "lattice-commands",
  "description": "Permissions for Lattice Core custom commands",
  "permissions": [
    {
      "identifier": "allow-start-node",
      "description": "Allows starting the node",
      "commands": ["start_node"]
    },
    {
      "identifier": "allow-network-commands",
      "description": "Allows network and bootnode operations",
      "commands": [
        "get_bootnodes",
        "add_bootnode",
        "remove_bootnode",
        "connect_bootnodes",
        "connect_peer",
        "disconnect_peer",
        "get_peers",
        "join_testnet",
        "auto_add_bootnodes"
      ]
    },
    {
      "identifier": "allow-stop-node",
      "description": "Allows stopping the node",
      "commands": ["stop_node"]
    },
    {
      "identifier": "allow-get-node-status",
      "description": "Allows getting node status",
      "commands": ["get_node_status"]
    },
    {
      "identifier": "allow-get-node-config",
      "description": "Allows getting node config",
      "commands": ["get_node_config"]
    },
    {
      "identifier": "allow-update-node-config",
      "description": "Allows updating node config",
      "commands": ["update_node_config"]
    },
    {
      "identifier": "allow-wallet-commands",
      "description": "Allows wallet operations",
      "commands": [
        "create_account",
        "create_account_extended",
        "import_account",
        "import_account_from_mnemonic",
        "get_accounts",
        "get_account",
        "send_transaction",
        "sign_message",
        "verify_signature",
        "export_private_key",
        "update_balance",
        "get_account_activity",
        "get_tx_overview",
        "get_address_observed_balance",
        "set_reward_address",
        "get_reward_address"
      ]
    },
    {
      "identifier": "allow-dag-commands",
      "description": "Allows DAG operations",
      "commands": [
        "get_dag_data",
        "get_block_details",
        "get_blue_set",
        "get_current_tips",
        "calculate_blue_score",
        "get_block_path"
      ]
    },
    {
      "identifier": "allow-model-commands",
      "description": "Allows model operations",
      "commands": [
        "deploy_model",
        "run_inference",
        "start_training",
        "get_model_info",
        "list_models",
        "get_training_jobs",
        "get_job_status",
        "get_deployments"
      ]
    }
  ]
}
